{
  "name": "git-commit-formatter",
  "version": "1.0.0",
  "description": "Format git commit messages",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.31",
    "mocha": "^8.3.2",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@bendera/commit-message-formatter": "^0.7.0",
    "@types/vscode": "^1.81.0"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "activationEvents": [
    "onLanguage:scminput"
  ],
  "repository": {
    "url": "https://github.com/joyceerhl/vscode-git-fit-commit"
  },
  "author": "Joyce Er",
  "publisher": "joyceerhl",
  "license": "MIT"
}
